@model InventoryManagement.Application.Contract.Inventory.EditInventory
@{
}

<div class="modal-header alert-success m-2">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title bg-primary">ویرایش تخفیف همکار :<span class="text-primary"> </span> </h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label">انتخاب محصول   </label>
                    <select class="form-control" asp-for="ProductId" asp-items='new SelectList(Model.Products,"Id", "Name")'>
                        <option value="0">انتخاب محصول  </option>
                    </select>
                    <span asp-validation-for="ProductId" class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UnitPrice" class="control-label">قیمت واحد </label>
                    <input type="text" class="form-control" asp-for="UnitPrice">
                    <span asp-validation-for="UnitPrice" class="error"></span>
                </div>
            </div>
        </div> 

      
        <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />

        <div class="modal-footer">
            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
            <button type="submit" class="btn btn-primary waves-effect waves-light">ذخیره تغییرات </button>
        </div>
    </div>
</form>


